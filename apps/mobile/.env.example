# Development Environment Variables
# Copy this to .env.local and update with your actual values

# Backend API URL
API_BASE_URL=http://localhost:5000/api
# For iOS simulator, use your computer's IP address instead of localhost
# API_BASE_URL=http://192.168.1.xxx:5000/api

# Web Frontend URL
WEB_BASE_URL=http://localhost:3000

# WebSocket URL for real-time features
WEBSOCKET_URL=ws://localhost:5000

# Environment
NODE_ENV=development

# Production URLs (update these for production deployment)
PROD_API_URL=https://api.yourbackend.com/api
PROD_WEB_URL=https://yourwebapp.com
PROD_WEBSOCKET_URL=wss://api.yourbackend.com

# Optional: Authentication settings
JWT_SECRET_KEY=your-jwt-secret
AUTH_TOKEN_EXPIRY=24h

# Optional: Database connection (if mobile needs direct DB access)
# DATABASE_URL=your-database-connection-string

# Optional: Third-party services
# TWILIO_ACCOUNT_SID=your-twilio-sid
# TWILIO_AUTH_TOKEN=your-twilio-token
# FIREBASE_PROJECT_ID=your-firebase-project
